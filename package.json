{
    "name": "wordle",
    "version": "1.0.0",
    "description": "Project template",
    "private": true,
    "scripts": {
        "start": "webpack serve --open --config webpack/webpack.dev.js",
        "build:dev": "webpack --node-env=development --config webpack/webpack.dev.js",
        "build:prod": "webpack --node-env=production --config webpack/webpack.prod.js",
        "prettier": "prettier --write .",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
        "lint:fix": "npm run lint -- --fix",
        "stylelint": "stylelint \"src/**/*.{css,scss}\" --fix"
    },
    "keywords": [],
    "author": "imgrau",
    "license": "ISC",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "npm run lint:fix"
        ],
        "*.{scss,css}": [
            "npm run prettier",
            "npm run stylelint"
        ],
        "*.{json,md}": [
            "npm run prettier"
        ]
    },
    "devDependencies": {
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "autoprefixer": "^10.4.21",
        "clsx": "^2.1.1",
        "css-loader": "^7.1.2",
        "eslint": "^8.57.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "html-loader": "^5.1.0",
        "html-webpack-plugin": "^5.6.3",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "mini-css-extract-plugin": "^2.9.2",
        "postcss": "^8.5.6",
        "postcss-loader": "^8.1.1",
        "postcss-scss": "^4.0.9",
        "prettier": "^3.5.3",
        "sass": "^1.89.2",
        "sass-loader": "^16.0.5",
        "style-loader": "^4.0.0",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier": "^9.0.5",
        "stylelint-order": "^5.0.0",
        "ts-loader": "^9.5.2",
        "typescript": "^5.8.3",
        "webpack": "^5.99.9",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2",
        "webpack-merge": "^6.0.1"
    },
    "dependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    }
}
